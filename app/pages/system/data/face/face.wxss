/* pages/system/data/face/face.wxss */

.title{
		display: flex;
		justify-content: center;
		align-items: center;
}

.title view{
		width: 95%;
		height: 100rpx;
		margin: 10rpx 10rpx;
		border: 5rpx dashed #13BEEC;
		border-radius: 15px;
		display: flex;
		justify-content: center;
		align-items: center;
}

.title view text{
		font-size: 60rpx;
		color: #13BEEC;
		font-weight: bold;
}

.top,.bottom{
		width: 100%;
		height: 580rpx;
		display: flex;
		justify-content: space-around;
}

.left,.right{
		width: 45%;
		margin: 10rpx 10rpx;
		border: 5rpx dashed #13BEEC;
		border-radius: 15px;
		display: flex;
		justify-content: center;
}

.tip{
		display: flex;
		justify-content: center;
		color: #13BEEC;
		margin: 30rpx 0;
}

.img{
		width: 300rpx;
		height: 300rpx;
		border: #000 solid 2rpx;
		display: flex;
		justify-content: center;
}

.img image{
	width: 300rpx;
	height: 300rpx;
}

.state{
	display: flex;
	justify-content: space-around;
	align-items: flex-end;
	margin: 30rpx 0;
}
.state button{
		width: 150rpx;
		height: 80rpx;
		font-size: 30rpx;
		background: #FFA500;
		color: #FFF;
		font-weight: bold;
}

.pass{
	color: greenyellow;
}

.fail{
	color: #AAAAAA;
}